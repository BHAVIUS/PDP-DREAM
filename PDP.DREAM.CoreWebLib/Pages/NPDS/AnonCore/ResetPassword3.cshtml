@page "/NPDS/AnonCore/ResetPassword3"
@model AnonCoreResetPassword3
@{
  var psr = (PdpSiteRazorModel)Model.PSR;
  var qurc = (QebUserRestContext)Model.QURC;
}
@Html.Raw(psr.FormatPageTitle())

@if (Model.UXM.FormCompleted)
{
  <p class="pdpTaskPassed">
    Your password has been reset.
  </p>
}
else
{
  <form id="frmResetPassword3" asp-page="/NPDS/AnonCore/ResetPassword3"
      method="post" role="form" class="form-horizontal">
    <p>
      To reset your password, please enter your username and then answer the security question.
    </p>
    <div class="form-group">
      @Html.LabelFor(m => m.UXM.UserName, new { @class = "form-label col-md-3" })
      @Html.TextBoxFor(m => m.UXM.UserName, new { @class = "form-control col-md-3", Value = Model.UXM.UserName })
      @Html.ValidationMessageFor(m => m.UXM.UserName, null, new { @class = "form-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.UXM.SecurityToken, new { @class = "form-label col-md-3" })
      @Html.TextBoxFor(m => m.UXM.SecurityToken, new { @class = "form-control col-md-3", Value = Model.UXM.SecurityToken })
      @Html.ValidationMessageFor(m => m.UXM.SecurityToken, null, new { @class = "form-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.UXM.NewPassword, new { @class = "form-label col-md-3" })
      @Html.PasswordFor(m => m.UXM.NewPassword, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.UXM.NewPassword, null, new { @class = "form-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.UXM.AltPassword, new { @class = "form-label col-md-3" })
      @Html.PasswordFor(m => m.UXM.AltPassword, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.UXM.AltPassword, null, new { @class = "form-label col-md-6 text-danger" })
    </div>
    <br />
    <button id="btnResetPassword3" type="submit" class="btn btn-outline-primary">Reset Password</button>
  </form>
}
