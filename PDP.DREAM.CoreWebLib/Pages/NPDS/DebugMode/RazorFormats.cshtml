@page
@attribute [PdpRazorPageRoute(DepCoreWebLib, DepDebugModeRazorFormats)]
@model DebugModeRazorFormats
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.Extensions.Options
@inject IOptions<RazorViewEngineOptions> rveOptions
@{
  PdpSiteRazorModel psrm = Model.PSRM;
  var pageLocFormats = rveOptions.Value.PageViewLocationFormats;
  var viewLocFormats = rveOptions.Value.ViewLocationFormats;
  var viewLocExpanders = rveOptions.Value.ViewLocationExpanders;
}
@Html.Raw(psrm.FormatBodyTitle())
@if (!string.IsNullOrEmpty(psrm.RazorBodyMenu))
{ <p><partial name="@psrm.RazorBodyMenu" /></p> }

<h4>Page Location Formats</h4>

<ul>
  @foreach (var locFormat in pageLocFormats)
  {
    <li>@locFormat</li>
  }
</ul>

<h4>View Location Formats</h4>

<ul>
  @foreach (var locFormat in viewLocFormats)
  {
    <li>@locFormat</li>
  }
</ul>

<h4>View Location Expanders</h4>

<ul>
  @foreach (var locExp in viewLocExpanders)
  {
    <li>@locExp</li>
  }
</ul>
