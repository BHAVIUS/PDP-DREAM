@{
  bool userAuth = (User?.Identity?.IsAuthenticated ?? false);
  string userName = (User?.Identity?.Name ?? string.Empty);
  if (userAuth)
  {
    <span>
      AuthMode:
      <a asp-page="/NPDS/AuthMode/LogoutUser">Logout User</a>
      <span> | </span>
      <a asp-page="/NPDS/AuthMode/DisplayProfile">@userName</a>
      <span> | </span>
      <a asp-page="/NPDS/AuthMode/ChangeProfile">Change Profile</a>
      <span> | </span>
      <a asp-page="/NPDS/AuthMode/ChangeEmail">Change Email</a>
      <span> | </span>
      <a asp-page="/NPDS/AuthMode/ChangePassword">Change Password</a>
      <span> | </span>
      <a asp-page="/NPDS/AuthMode/ChangeUsername">Change Username</a>
    </span>
  }
  else
  {
    <span>
      AnonMode:
      <a asp-page="/NPDS/AnonMode/Index">Index</a>
      <span> | </span>
      <a asp-page="/NPDS/AnonMode/ContactSite">Contact Site</a>
      <span> | </span>
      <a asp-page="/NPDS/AnonMode/RegisterUser">Register User</a>
      <span> | </span>
      <a asp-page="/NPDS/AnonMode/LoginUser">Login User</a>
    </span>
  }
}
