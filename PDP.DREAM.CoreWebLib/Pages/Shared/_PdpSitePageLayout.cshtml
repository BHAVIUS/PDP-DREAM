@{
  PdpSiteRazorModel psr = Model.PSR;
  PdpSiteInfoModel psi = psr.PdpSiteInfo;
  QebUserRestContext qurc = Model.QURC;
}

<!doctype html>
<html lang="en-US">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- The above 3 meta tags must come first in the head; any other head content must come after these tags -->
  <meta name="author" content="@Html.Raw(psi.MetatagAuthor)" />
  <meta name="keywords" content="@Html.Raw(psi.MetatagKeywords)" />
  <meta name="description" content="@Html.Raw(psi.MetatagDescription)" />
  <title>@Html.Raw(psi.SiteTitle)</title>
  <link href="~/PdpSiteIcon20101123.ico" rel="icon" type="image/x-icon" />
  <environment include="Development">
    <link href="~/lib/bootstrap/dist521/css/bootstrap.css" rel="stylesheet" />
  </environment>
  <environment exclude="Development">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
          rel="stylesheet" crossorigin="anonymous"
          asp-fallback-href="~/lib/bootstrap/dist521/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
  </environment>
  <!-- css styles before js scripts -->
  <link href="~/lib/kendo/2022.3.1012/styles/kendo.classic-opal.min.css" rel="stylesheet" type="text/css" />
  <link href="~/PdpSiteStyle.css" rel="stylesheet" type="text/css" asp-append-version="true" />
  <!-- Kendo scripts after jQuery scripts -->
  <script src="~/lib/kendo/2022.3.1012/js/jquery.min.js"></script>
  <script src="~/lib/kendo/2022.3.1012/js/jszip.min.js"></script>
  <script src="~/lib/kendo/2022.3.1012/js/kendo.all.min.js"></script>
  <script src="~/lib/kendo/2022.3.1012/js/kendo.aspnetmvc.min.js"></script>
</head>
<body>
  <div class="pdpPage k-content container-fluid">
    <header class="pdpHead row nav navbar navbar-left">
      <nav class="col-md-4">
        <img @Html.Raw(psi.HeaderImageLogo) />
      </nav>
      <nav class="col-md-8">
        <a asp-page="@psr.RazorPageName">@Html.Raw(psr.FormatHeaderTitle())</a>
        @Html.Raw(psr.FormatHeaderTagLine())
        @Html.Raw(psr.FormatHeaderSloganLine())
        @if (!string.IsNullOrEmpty(psr.RazorHeaderMenu))
        {
          <partial name="@psr.RazorHeaderMenu" />
        }
      </nav>
    </header>
    <div class="pdpClear"><hr /></div>
    <main class="pdpBody">
      <partial name="_PdpSiteKendoGrid" />
      @RenderBody()
      <partial name="_PdpSiteValidation" />
    </main>
    <div class="pdpClear"><hr /></div>
    <footer class="pdpFoot row nav navbar navbar-left">
      <nav class="col-md-12">
        @if (!string.IsNullOrEmpty(psr.RazorFooterMenu))
        {
          <partial name="@psr.RazorFooterMenu" /><br />
        }
        Served @DateTime.Now by @psi.SiteAppNameVersion<br />
        @Html.Raw(psi.FooterCodebuildLine)
        @Html.Raw(psi.FooterCopyrightLine)
        @Html.Raw(psi.FooterCrosslinkLine)
        @Html.Raw(psi.FooterContactLine)
      </nav>
    </footer>
  </div>
  <environment include="Development">
    <script src="~/lib/bootstrap/dist521/js/bootstrap.js"></script>
  </environment>
  <environment exclude="Development">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"
            asp-fallback-src="~/lib/bootstrap/dist521/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
  </environment>
  @RenderSection("Scripts", required: false)
</body>
</html>
