@model ChangeUsernameUxm

@{
  var prc = (PdpRestContext) ViewData["PRC"];
  Layout = prc.RazorMvcLayoutView;
}

@Html.Raw(prc.FormatPageTitle("NPDS/AuthNexus/ChangeUsername"))

<section id="ChangeUsernameForm">
  @using (Html.BeginForm("ChangeUsername", "AuthNexus", FormMethod.Post, new { area = "NPDS", role = "form", @class = "form-horizontal" }))
  {
<p>
  Use the form below to change your username.
</p>
    <div class="form-group">
      @Html.AntiForgeryToken()
      @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.OldUsername, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.OldUsername, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.OldUsername, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.NewUsername, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.NewUsername, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.NewUsername, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.AltUsername, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.AltUsername, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.AltUsername, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.PassWord, new { @class = "control-label col-md-3" })
      @Html.PasswordFor(m => m.PassWord, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.PassWord, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-default col-md-offset-2 col-md-2">Change Username</button>
    </div>
  }
</section>

<partial name="_ValidationScripts" />
