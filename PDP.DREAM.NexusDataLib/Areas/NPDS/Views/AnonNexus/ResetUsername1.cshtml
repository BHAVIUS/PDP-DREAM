@model ChangeUsernameUxm1

@{
  var prc = (PdpRestContext) ViewData["PRC"];
  Layout = prc.RazorMvcLayoutView;
}

@Html.Raw(prc.FormatPageTitle("NPDS/AnonNexus/ResetUsername"))

<section id="ResetUsernameForm">
  @using (Html.BeginForm("ResetUsername1", "AnonNexus", FormMethod.Post, new { area = "NPDS", role = "form", @class = "form-horizontal" }))
  {
    <p>
      To reset your username, please enter your password and then answer the security question.
    </p>

    <div class="form-group">
      @Html.LabelFor(m => m.PassWord, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.PassWord, new { @class = "form-control col-md-3" })
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-default col-md-offset-2 col-md-2">Next Step</button>
    </div>
  }
</section>

<partial name="_ValidationScripts" />
