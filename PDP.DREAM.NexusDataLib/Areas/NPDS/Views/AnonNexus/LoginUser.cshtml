@model LoginUserUxm

@{
  var prc = (PdpRestContext) ViewData["PRC"];
  Layout = prc.RazorMvcLayoutView;
}

@Html.Raw(prc.FormatPageTitle("NPDS/AnonNexus/LoginUser"))

<section id="LoginUserForm">
  @using (Html.BeginForm("LoginUser", "AnonNexus", FormMethod.Post, new { area = "NPDS", role = "form", @class = "form-horizontal" }))
  {
    <p>
      Please enter your username and password.
      @Html.ActionLink("Register as a new user", "RegisterUser")
      if you do not yet have an account with username and password.
      @Html.ActionLink("Reset your password", "ResetPassword")
      if you have forgotten it.
    </p>
    <div class="form-group">
      @Html.AntiForgeryToken()
      @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.PassWord, new { @class = "control-label col-md-3" })
      @Html.PasswordFor(m => m.PassWord, new { @class = "form-control col-md-3" })
      @Html.ValidationMessageFor(m => m.PassWord, null, new { @class = "control-label col-md-6 text-danger" })
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-default col-md-offset-2 col-md-2">Login User</button>
    </div>
  }
</section>

<partial name="_ValidationScripts" />
