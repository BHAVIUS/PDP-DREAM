@model ChangePasswordUxm1
@{ Layout = ViewBag.PRC.PageLayout; }
@Html.Raw(ViewBag.PRC.FormatPageTitle("PDP/Anon/ResetPassword"))

<section id="ResetPasswordForm">
  @using (Html.BeginForm("ResetPassword1", "Anon", FormMethod.Post, new { area = "PDP", role = "form", @class = "form-horizontal" }))
  {
    <p>
      To reset your password, please enter your username and then answer the security question.
    </p>

    <div class="form-group">
      @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-3" })
      @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-3" })
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-default col-md-offset-2 col-md-2">Next Step</button>
    </div>
  }
</section>

<partial name="_ValidationScripts" />
