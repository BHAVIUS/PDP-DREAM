<Project Sdk="Microsoft.NET.Sdk.Razor">

  <!-- project declaration -->
  <PropertyGroup>
    <AssemblyName>PDP.Aoraki.NexusWebLib</AssemblyName>
    <RootNamespace>PDP.DREAM.NexusWebLib</RootNamespace>
    <Authors>Carl Taswell and the PORTAL-DOORS Project Team</Authors>
    <Company>Brain Health Alliance</Company>
    <AssemblyVersion>10.1.9</AssemblyVersion>
    <FileVersion>10.1.9</FileVersion>
    <Version>10.1.9</Version>
    <Platforms>x64;ARM64;</Platforms>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <!-- dev/test/build/debug configuration -->
  <PropertyGroup>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <NoWarn>CS0219;CS8600;CS8601;CS8602;CS8603;CS8604;CS8625;IDE0047;IDE0059;</NoWarn>
    <ResolveAssemblyWarnOrErrorOnTargetArchitectureMismatch>None</ResolveAssemblyWarnOrErrorOnTargetArchitectureMismatch>
    <RunAnalyzersDuringLiveAnalysis>False</RunAnalyzersDuringLiveAnalysis>
    <SatelliteResourceLanguages>en-US</SatelliteResourceLanguages>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- required references -->
  <ItemGroup>
    <ProjectReference Include="..\PDP.DREAM.CoreWebLib\PDP.DREAM.CoreWebLib.csproj" />
    <ProjectReference Include="..\PDP.DREAM.NexusDataLib\PDP.DREAM.NexusDataLib.csproj" />
  </ItemGroup>

</Project>

